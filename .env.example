# Simple378 - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to version control

# ====================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================================================
POSTGRES_USER=fraud_admin
POSTGRES_PASSWORD=CHANGE_THIS_secure_password_min_20_chars
POSTGRES_DB=fraud_detection
DATABASE_URL=postgresql+asyncpg://fraud_admin:CHANGE_THIS_secure_password@db:5432/fraud_detection

# ====================================================================
# CACHE CONFIGURATION (Redis)
# ====================================================================
REDIS_URL=redis://cache:6379/0
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_DB=0

# ====================================================================
# VECTOR DATABASE (Qdrant)
# ====================================================================
QDRANT_URL=http://vector_db:6333

# ====================================================================
# OBJECT STORAGE (MinIO)
# ====================================================================
MINIO_ROOT_USER=fraud_storage_admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_minio_password_min_20_chars

# ====================================================================
# SECURITY & AUTHENTICATION
# ====================================================================
SECRET_KEY=CHANGE_THIS_jwt_secret_key_minimum_32_characters_required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=CHANGE_THIS_encryption_key_for_sensitive_data_32_chars

# ====================================================================
# API CONFIGURATION
# ====================================================================
CORS_ORIGINS=["http://localhost:8080","http://localhost:5173","http://localhost:3000"]
API_V1_PREFIX=/api/v1

# ====================================================================
# OPENAI / AI SERVICES (Optional)
# ====================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# ====================================================================
# MONITORING & OBSERVABILITY
# ====================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# ====================================================================
# APPLICATION SETTINGS
# ====================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
DB_ECHO=false

# WARNING: Only set to true in local development!
# Disables authentication to allow testing without login
DISABLE_AUTH=false

# Backend URL for MCP server
BACKEND_URL=http://backend:8000
MCP_COORDINATION_TTL=3600

# ====================================================================
# EMAIL CONFIGURATION (Optional)
# ====================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=noreply@fraud-detection.com

# ====================================================================
# WEBHOOK & INTEGRATION SECRETS (Optional)
# ====================================================================
WEBHOOK_SECRET=CHANGE_THIS_webhook_signature_secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ====================================================================
# FEATURE FLAGS
# ====================================================================
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_LANGUAGE=false

# ====================================================================
# RATE LIMITING
# ====================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ====================================================================
# FILE UPLOAD LIMITS
# ====================================================================
MAX_UPLOAD_SIZE_MB=100
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,text/csv,application/vnd.ms-excel

# ====================================================================
# SESSION CONFIGURATION
# ====================================================================
SESSION_SECRET=CHANGE_THIS_session_secret_key_32_chars
SESSION_MAX_AGE=86400
