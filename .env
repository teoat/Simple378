# ==============================================
# Simple378 Environment Configuration
# ==============================================

# --- Database Configuration ---
# Main Application Database (PostgreSQL)
# Note: For local dev, use localhost:5432 (or 5433 if mapped there)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/fraud_detection

# Time-Series Database (TimescaleDB)
# Note: Maps to localhost:5434 in docker-compose
TIMESCALE_URL=postgresql+asyncpg://postgres:postgres@localhost:5434/fraud_detection_timeseries

# Database Credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fraud_detection

# --- Caching & Key-Value Store ---
# Redis
REDIS_URL=redis://localhost:6379
# Note: docker-compose overrides this to 'redis://cache:6379/0'

# --- Vector Database ---
# Qdrant
QDRANT_URL=http://localhost:6333
# Note: docker-compose overrides this to 'http://vector_db:6333'

# --- Search Engine ---
# Meilisearch
MEILI_URL=http://localhost:7700
# Note: docker-compose overrides this to 'http://meilisearch:7700'
MEILI_MASTER_KEY=masterKey123

# --- Application Settings ---
APP_NAME=Simple378
ENVIRONMENT=development
LOG_LEVEL=INFO
DB_ECHO=false
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Security
SECRET_KEY=7f2c491b-ea56-4d8b-85e0-eb9a6396db77_generated_secure_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
MFA_CODE_VALIDITY_SECONDS=300

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# --- AI & External Services ---
ANTHROPIC_API_KEY=sk-ant-placeholder
# OPENAI_API_KEY=

# --- Monitoring ---
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

