# Production Environment Configuration
# IMPORTANT: Update all passwords and secrets before deploying!

# ============================================================================
# Basic Configuration
# ============================================================================
ENVIRONMENT=production
VERSION=1.0.0

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=fraud_detector_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_NOW
POSTGRES_DB=fraud_detection_prod
DATABASE_URL=postgresql+asyncpg://fraud_detector_prod:CHANGE_THIS_STRONG_PASSWORD_NOW@db:5432/fraud_detection_prod

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_NOW
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_NOW@cache:6379/0

# ============================================================================
# Vector Database
# ============================================================================
QDRANT_URL=http://vector_db:6333

# ============================================================================
# Authentication & Security
# ============================================================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG_FOR_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Logging & Debugging
# ============================================================================
LOG_LEVEL=INFO
DB_ECHO=false

# ============================================================================
# OpenTelemetry Tracing
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
ENABLE_OTEL=true

# ============================================================================
# AI Services (Required for AI features)
# ============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# MCP Server
# ============================================================================
BACKEND_URL=http://backend:8000
COORDINATION_TTL=3600

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Simple378
FRONTEND_URL=https://yourdomain.com
PROJECT_NAME=Fraud Detection System
API_V1_STR=/api/v1
API_URL=https://api.yourdomain.com
MAX_UPLOAD_FILE_SIZE_MB=10

# ============================================================================
# Sentry (Error Monitoring) - Optional but Recommended
# ============================================================================
SENTRY_DSN=https://your-backend-sentry-dsn@sentry.io/project-id
FRONTEND_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# ============================================================================
# OAuth Providers (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================================================
# WebAuthn
# ============================================================================
WEBAUTHN_RP_ID=yourdomain.com
WEBAUTHN_RP_NAME=Simple378

# ============================================================================
# Twilio (SMS) - Optional
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# Email/SMTP
# ============================================================================
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@yourdomain.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# ============================================================================
# MFA Settings
# ============================================================================
MFA_CODE_VALIDITY_SECONDS=300

# ============================================================================
# Performance Configuration
# ============================================================================
UVICORN_WORKERS=4
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
