# Staging Environment Configuration
# Copy values from .env.staging.example and update as needed

# ============================================================================
# Basic Configuration
# ============================================================================
ENVIRONMENT=staging
VERSION=1.0.0

# ============================================================================
# GitHub Container Registry
# ============================================================================
GITHUB_REPOSITORY=teoat/simple378

# ============================================================================
# Docker Image Tags
# ============================================================================
IMAGE_TAG=staging

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=fraud_detector
POSTGRES_PASSWORD=staging_password_change_me
POSTGRES_DB=fraud_detection_staging
DATABASE_URL=postgresql+asyncpg://fraud_detector:staging_password_change_me@db:5432/fraud_detection_staging

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=staging_redis_password_change_me
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://:staging_redis_password_change_me@cache:6379/0

# ============================================================================
# Vector Database
# ============================================================================
QDRANT_URL=http://vector_db:6333

# ============================================================================
# Backend API Configuration
# ============================================================================
SECRET_KEY=staging_secret_key_min_32_characters_change_me
JWT_SECRET_KEY=staging_jwt_secret_key_32_chars_change_me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:8080,http://staging.example.com

# ============================================================================
# Sentry Configuration (Error Monitoring)
# ============================================================================
SENTRY_DSN=
FRONTEND_SENTRY_DSN=
SENTRY_ENVIRONMENT=staging

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_AI_ASSISTANT=true
ENABLE_OFFLINE_MODE=true
ENABLE_FORENSICS=true
ENABLE_WEBSOCKETS=true

# ============================================================================
# External Services
# ============================================================================
JAEGER_ENDPOINT=http://jaeger:4317

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
DB_ECHO=false

# ============================================================================
# OpenTelemetry
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=fraud-detection-api-staging
ENABLE_OTEL=true

# ============================================================================
# Performance Configuration
# ============================================================================
UVICORN_WORKERS=4
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# Test Data Configuration
# ============================================================================
SEED_TEST_DATA=true
TEST_USER_EMAIL=analyst@staging.example.com
TEST_USER_PASSWORD=StagingTest123!

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# ============================================================================
# Monitoring & Alerts
# ============================================================================
SLACK_WEBHOOK_URL=
ALERT_ON_ERRORS=true

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Simple378
FRONTEND_URL=http://localhost:8080
PROJECT_NAME=Fraud Detection System
API_V1_STR=/api/v1
API_URL=http://backend:8000
MAX_UPLOAD_FILE_SIZE_MB=5

# ============================================================================
# AI Services (Optional for staging)
# ============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ============================================================================
# MCP Server
# ============================================================================
BACKEND_URL=http://backend:8000
COORDINATION_TTL=3600

# ============================================================================
# OAuth Providers (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================================================
# WebAuthn
# ============================================================================
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Simple378

# ============================================================================
# Twilio (SMS) - Optional
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# Email/SMTP
# ============================================================================
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# ============================================================================
# MFA Settings
# ============================================================================
MFA_CODE_VALIDITY_SECONDS=300
