{
  "dashboard": {
    "title": "WebSocket Monitoring Dashboard",
    "tags": ["websocket", "realtime", "security"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Active WebSocket Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(websocket_active_connections)",
            "legendFormat": "Total Active Connections"
          }
        ]
      },
      {
        "title": "Connection Success Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(websocket_connections_total{status=\"success\"}[5m]) / rate(websocket_connections_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Authentication Failures by Reason",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(websocket_auth_failures_total[5m])",
            "legendFormat": "{{reason}}"
          }
        ]
      },
      {
        "title": "Authentication Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(websocket_auth_latency_seconds_bucket[5m]))",
            "legendFormat": "p95 Latency"
          },
          {
            "expr": "histogram_quantile(0.99, rate(websocket_auth_latency_seconds_bucket[5m]))",
            "legendFormat": "p99 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "title": "Connection Duration Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(websocket_connection_duration_seconds_bucket[5m])",
            "format": "heatmap"
          }
        ]
      },
      {
        "title": "Message Throughput",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(websocket_messages_sent_total[5m])",
            "legendFormat": "Sent - {{message_type}}"
          },
          {
            "expr": "rate(websocket_messages_received_total[5m])",
            "legendFormat": "Received"
          }
        ]
      },
      {
        "title": "WebSocket Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(websocket_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}
