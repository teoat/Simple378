# Test Environment Variables
# This file is used for running tests

# Database - using SQLite for tests
DATABASE_URL=sqlite+aiosqlite:///./test.db

# Redis - mocked in tests
REDIS_URL=redis://localhost:6379/0

# Qdrant - mocked in tests
QDRANT_URL=http://localhost:6333

# Security
SECRET_KEY=test_secret_key_for_testing_purposes_only_not_for_production

# Algorithm
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=DEBUG
DB_ECHO=false

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# AI Services - Use test keys or empty for tests
ANTHROPIC_API_KEY=test-key-not-real
OPENAI_API_KEY=test-key-not-real

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File upload
MAX_UPLOAD_FILE_SIZE_MB=5
