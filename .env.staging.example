# Staging Environment Configuration
# Copy this file to .env.staging and fill in the values

# ============================================================================
# Basic Configuration
# ============================================================================
ENVIRONMENT=staging
VERSION=1.0.0

# ============================================================================
# GitHub Container Registry
# ============================================================================
GITHUB_REPOSITORY=your-org/simple378

# ============================================================================
# Docker Image Tags
# ============================================================================
IMAGE_TAG=staging

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=fraud_detector
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=fraud_detection_staging

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=change_this_redis_password
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://cache:6379/0

# ============================================================================
# Backend API Configuration
# ============================================================================
SECRET_KEY=change_this_secret_key_to_a_random_string_at_least_32_characters
JWT_SECRET_KEY=change_this_jwt_secret_key_also_32plus_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:8080,http://staging.example.com

# ============================================================================
# Sentry Configuration (Error Monitoring)
# ============================================================================
SENTRY_DSN=https://your-backend-sentry-dsn@sentry.io/project-id
FRONTEND_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_AI_ASSISTANT=true
ENABLE_OFFLINE_MODE=true
ENABLE_FORENSICS=true
ENABLE_WEBSOCKETS=true

# ============================================================================
# External Services
# ============================================================================
QDRANT_URL=http://vector_db:6333
JAEGER_ENDPOINT=http://jaeger:4317

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
DB_ECHO=false

# ============================================================================
# Performance Configuration
# ============================================================================
UVICORN_WORKERS=4
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# OpenTelemetry (Optional)
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=fraud-detection-api-staging

# ============================================================================
# Test Data Configuration
# ============================================================================
SEED_TEST_DATA=true
TEST_USER_EMAIL=analyst@staging.example.com
TEST_USER_PASSWORD=StagingTest123!

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# ============================================================================
# Monitoring \u0026 Alerts
# ============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_ON_ERRORS=true
