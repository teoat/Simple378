# Production Environment Variables
# Copy this file to .env.production and set actual values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
POSTGRES_DB=fraud_detection
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Redis
REDIS_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
REDIS_URL=redis://:${REDIS_PASSWORD}@cache:6379/0

# Vector Database
QDRANT_URL=http://vector_db:6333

# Security
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_STRONG_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API
ANTHROPIC_API_KEY=sk-ant-CHANGE_THIS_TO_YOUR_ANTHROPIC_API_KEY

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend
API_URL=https://api.yourdomain.com

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
