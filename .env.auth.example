# ==================== Authentication Configuration ====================

# Application
APP_NAME=Simple378
FRONTEND_URL=http://localhost:5173

# ==================== OAuth/SSO Providers ====================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Get from: https://console.cloud.google.com/apis/credentials

# Microsoft Azure AD
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
# Get from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
# Get from: https://github.com/settings/developers

# ==================== WebAuthn Configuration ====================

# WebAuthn Relying Party
WEBAUTHN_RP_ID=localhost  # Change to your domain in production (e.g., example.com)
WEBAUTHN_RP_NAME=Simple378
# Note: RP_ID must match the domain where the app is hosted

# ==================== SMS Service (Twilio) ====================

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
# Get from: https://www.twilio.com/console

# ==================== Email Service ====================

# SMTP Configuration
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# Alternative: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
# Get from: https://app.sendgrid.com/settings/api_keys

# ==================== MFA Configuration ====================

# MFA Settings
MFA_TOTP_ISSUER=Simple378
MFA_CODE_VALIDITY_SECONDS=300  # 5 minutes for SMS/Email OTP
MFA_BACKUP_CODES_COUNT=10

# ==================== Security ====================

# Existing security settings (from main .env)
SECRET_KEY=your-secret-key-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Redis (for session/challenge storage) ====================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== Feature Flags ====================

# Enable/disable authentication methods
ENABLE_MFA=true
ENABLE_WEBAUTHN=true
ENABLE_OAUTH=true

# OAuth providers to enable
OAUTH_PROVIDERS=google,microsoft,github

# MFA methods to enable
MFA_METHODS=totp,sms,email
